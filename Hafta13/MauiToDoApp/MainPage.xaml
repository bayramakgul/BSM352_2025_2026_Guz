<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiToDoApp.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ekle" Clicked="ToolbarAddTodoItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>

        <CollectionView x:Name="lstTodo" ItemsSource="{Binding toDoItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          ColumnDefinitions="Auto,*,Auto">

                        <Image Source="{Binding PhotoUrl}"
                               HeightRequest="100"
                               WidthRequest="100"
                               Margin="10"
                               Grid.Row="0"
                               Grid.Column="0"
                               Grid.RowSpan="3" />

                        <Label Grid.Row="0"
                               Grid.Column="1" 
                               Text="{Binding Title}"/>

                        <Label Grid.Row="1"
                               Grid.Column="1" 
                               Text="{Binding Description}"/>

                        <Label Grid.Row="2"
                               Grid.Column="1" 
                               Text="{Binding Date, StringFormat='Bitiş tarihi:{0}'}"/>
                        
                        <CheckBox 
                            IsChecked="{Binding IsCompleted}"
                            Grid.Column="2"
                            Grid.RowSpan="3"/>

                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </ScrollView>

</ContentPage>
