<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNewsApp.MainPage"
             Title="MAUI Haber App">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="TextColor" Value="Blue"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Margin="10">
        <CollectionView x:Name="lstCategory"
                        ItemsSource="{Binding NewsCategories}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Category}"
                            CommandParameter="{Binding }"
                            Clicked="LoadRSSNews"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            
        </CollectionView>


        <CollectionView x:Name="lstNews" 
                        SelectionMode="Single"
                        SelectionChanged="OpenNewsDetail"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding enclosure.url}" HeightRequest="200" />
                        <Label Text="{Binding title}" HorizontalOptions="Center"/>
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Label Text="{Binding author}"/>
                            <Label Text=" | "/>
                            <Label Text="{Binding pubDate}"/>
                        </HorizontalStackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
