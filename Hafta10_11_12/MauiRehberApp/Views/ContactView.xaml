<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiRehberApp.Views.ContactView"
             Title="ContactView">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalTextAlignment" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>

        <VerticalStackLayout Margin="20">
            <Label Text="{Binding Id}" HorizontalOptions="Center" TextColor="Orange" FontSize="8"/>
            <Label 
                Text="Kişi Bilgileri"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="5"
              RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" >

                <VerticalStackLayout Grid.Row="0" 
                                 Grid.Column="0" 
                                 Grid.ColumnSpan="2">
                    <Button Text="Resim Seç" Background="Transparent" TextColor="Blue" Clicked="AddImage"/>
                    <Image  HeightRequest="200"  Source="{Binding Resim}" Aspect="AspectFit" />
                </VerticalStackLayout>

                <Label Grid.Row="1" Grid.Column="0" Text="Ad"/>
                <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Ad}" Placeholder="Ad"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Soyad"/>
                <Entry Grid.Row="2" Grid.Column="1" Text="{Binding Soyad}" Placeholder="Soyad"/>

                <Label Grid.Row="3" Grid.Column="0" Text="Telefon"/>
                <Entry Grid.Row="3" Grid.Column="1" Text="{Binding Telefon}" Placeholder="Telefon" Keyboard="Telephone"/>

                <Label Grid.Row="4" Grid.Column="0" Text="Email"/>
                <Entry Grid.Row="4" Grid.Column="1" Text="{Binding Email}" Placeholder="Email" Keyboard="Email"/>

            </Grid>

            <HorizontalStackLayout Margin="20" Spacing="20" HorizontalOptions="Center" >
                <Button Text="Kaydet" Clicked="SaveClicked" HorizontalOptions="Center"/>
                <Button Text="İptal" Clicked="CancelClicked" HorizontalOptions="Center"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>